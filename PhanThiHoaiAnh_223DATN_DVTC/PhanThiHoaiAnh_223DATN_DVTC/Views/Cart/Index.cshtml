*@
<h4>Giỏ hàng</h4>
@{
}
<section id="cart_items">
	<div class="container">
		<div class="breadcrumbs">
			<ol class="breadcrumb">
				<li><a href="#">Home</a></li>
				<li class="active">Services Cart</li>
			</ol>
		</div>
		<div class="table-responsive cart_info">
			<table class="table table-condensed">
				<thead>
					<tr class="cart_menu">
						<td class="image">Sản phẩm</td>
						<td class="description"></td>
						<td class="price">Đơn giá</td>
						<td class="quantity">Số lượng</td>
						<td class="total">Tổng tiền</td>
						<td></td>
					</tr>
				</thead>
				<tbody>
					@if(Model.CartItems.Count > 0)
					{
						foreach (var item in Model.CartItems)
						{
							<tr>
								<td >
									<!--<a href=""><img src="~/images/@item.Image" width="20%"></a>-->
								</td>
								<td class="cart_description">
									<h5><a href="">@item.ServiceName</a></h5>
								</td>
								<td class="cart_price">
									<p>@item.Price.ToString("N0") đ</p>
								</td>
								<td >									
										<a class="btn btn-default btn-sm" asp-controller="Cart" asp-action="Increase" asp-route-id="@item.ServiceId"> + </a>
										<input class="cart_quantity_input" type="text" name="quantity" value="@item.Quantity" autocomplete="off" size="2">
										<a class="btn btn-success btn-sm" asp-controller="Cart" asp-action="Decrease" asp-route-id="@item.ServiceId"> - </a>
										<a class="btn btn-danger btn-sm" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ServiceId"> Xóa </a>
									
								</td>
								<td class="cart_total">
									<p class="cart_total_price">@Model.CartItems.Where(x => x.ServiceId == item.ServiceId).Sum(x => x.Quantity *x.Price).ToString("N0")</p>
								</td>
								<td class="cart_delete">
									<a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
								</td>
							</tr>
						}
						<tr rowspan="6">
							<td colspan="6">
								TỔNG TIỀN: <p class="cart_total_price">@Model.GrandTotal.ToString("N0") đ</p>
							</td>
							<td>
								<a class="btn btn-danger btn-sm" asp-controller="Cart" asp-action="Clear"> Xóa tất cả </a>

							</td>
						</tr>
					} else
					{
						<tr >
							<td colspan="5"><h4>Giỏ hàng trống</h4></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</section> <!--/#cart_items-->