@model IEnumerable<ServiceViewModel>
@{
	ViewData["title"] = "Kết quả tìm kiếm";
	Layout = "_Template";
}
<div class="col-sm-3">
	@Html.Partial("_SidebarPartial")
</div>
<h4>Kết quả tìm kiếm</h4>
<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">DỊCH VỤ</h2>
		@foreach (var item in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">
					<div class="single-products">

						<div class="productinfo text-center">
							<a asp-action="Detail" asp-controller="OtherServices" asp-route-Id="@item.Id">
								<img src="~/media/services/@item.Image" alt="@item.Name" width="100%" height="220" />
								<h2>@item.Price.ToString("N0") đ</h2>
								<p>@item.Name</p>
							</a>
							<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-id="@item.Id"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
						</div>
					</div>
				</div>
			</div>
		}
	</div><!--features_items-->
</div>