@model IEnumerable<MenuModel>
<div class="col-sm-3">
	@Html.Partial("_FoodbarPartial")
</div>
<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">THỰC ĐƠN</h2>
		@foreach (var item in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">
					<div class="single-products">

						<div class="productinfo text-center">
							<a asp-action="Detail" asp-controller="Menu" asp-route-Id="@item.Id">
								<img src="~/media/food/@item.Image" alt="@item.Name" width="100%" height="220" />
								<h2>@item.Price.ToString("N0") đ</h2>
								<p>@item.Name</p>
								<p>Số lượng món: @item.Quantity</p>
								<p>Trạng thái:
										@if (@item.Status == true)
										{
											<span class="text text-success">Đang kinh doanh</span>
										}
										else
										{
											<span class="text text-success">Ngừng kinh doanh</span>
										}
								</p>
							</a>
							<a class="btn btn-default add-to-cart" asp-action="AddMenu" asp-controller="Cart" asp-route-id="@item.Id"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
						</div>
					</div>
				</div>
			</div>
		}
	</div><!--features_items-->
</div>
