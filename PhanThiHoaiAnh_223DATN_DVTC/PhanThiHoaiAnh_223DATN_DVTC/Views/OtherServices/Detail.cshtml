@using PhanThiHoaiAnh_223DATN_DVTC.Models.Views
@model ServiceDetailWithRecommendationsViewModel
@{
	Layout = "_Template";
}
	<div class="row">
	<div class="col-sm-3">
		@Html.Partial("_SidebarPartial")
	</div>

	<div class="col-sm-9 padding-right">
		<div class="product-details">
			<!--product-details-->
			<div class="col-sm-5">
				<div class="view-product">
					<img src="~/media/services/@Model.Service.Image" alt="" with="100%" />
				</div>
				
			</div>
			<div class="col-sm-7">
				<div class="product-information">
					<!--/product-information-->
					<h2> @Model.Service.Name</h2>
					<h3>@Model.Service.Price.ToString("N0") VND</h3>
					<div class="input-group"
						<a></a>
						<a class="btn btn-success btn-sm" asp-controller="Cart" asp-action="Increase" asp-route-id="@Model.Service.Id"> + </a>
						<input type="text" class="form-control form-control-sm text-center" value="1" name="quantity" style="width:50px; height:30px;" />
						<a class="btn btn-default btn-sm" asp-controller="Cart" asp-action="Decrease" asp-route-id="@Model.Service.Id"> - </a>
					</div>
					<p></p>
					<button type="button" class="btn btn-fefault add-to-cart">
						<a asp-action="Add" asp-controller="Cart" asp-route-id="@Model.Service.Id">
							<i class="fa fa-shopping-cart"></i>
							Thêm vào giỏ hàng
						</a>
					</button>
                    <p>Loại dịch vụ:@Model.Service.Category</p>
					<a href=""><img src="images/product-details/share.png" class="share img-responsive" alt="" /></a>
				</div><!--/product-information-->
			</div>
		</div><!--/product-details-->

		<div class="category-tab shop-details-tab">
			<!--category-tab-->
			<div class="col-sm-12">
				<ul class="nav nav-tabs">
					<li class="active"><a href="#details" data-toggle="tab">Mô tả</a></li>
					<li><a href="#tag" data-toggle="tab">Tag</a></li>
					<li ><a href="#reviews" data-toggle="tab">Đánh giá</a></li>
				</ul>
			</div>
			<div class="tab-content">
				<div class="tab-pane fade active in" id="details">
					@Html.Raw(@Model.Service.Description)

				</div>


				<div class="tab-pane fade" id="reviews">
					<div class="col-sm-12">
						<ul>
							<li><a href=""><i class="fa fa-user"></i>EUGEN</a></li>
							<li><a href=""><i class="fa fa-clock-o"></i>12:41 PM</a></li>
							<li><a href=""><i class="fa fa-calendar-o"></i>31 DEC 2014</a></li>
						</ul>
						<p><b>Write Your Review</b></p>

						<form action="#">
							<span>
								<input type="text" placeholder="Your Name" />
								<input type="email" placeholder="Email Address" />
							</span>
							<textarea name=""></textarea>
							<b>Rating: </b> <img src="images/product-details/rating.png" alt="" />
							<button type="button" class="btn btn-default pull-right">
								Submit
							</button>
						</form>
					</div>
				</div>

			</div>
		</div><!--/category-tab-->

		<div class="recommended_items">
			<!--recommended_items-->
			<h2 class="title text-center">Danh sách đề xuất</h2>
			
			<div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
				<div class="carousel-inner">
					@foreach (var recommendation in Model.Recommendations)
					{
						<div class="item active">
							<div class="col-sm-4">
								<div class="product-image-wrapper">
									<div class="single-products">
										<div class="productinfo text-center">
												<img src="~/media/services/@recommendation.Image" alt="" />
												<h2>@recommendation.Price.ToString("N0")</h2>
												<p>@recommendation.Name</p>
												<button type="button" class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-id="@recommendation.Id"><i class="fa fa-shopping-cart"></i>Add to cart</button>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="item">
							<div class="col-sm-4">
								<div class="product-image-wrapper">
									<div class="single-products">
										<div class="productinfo text-center">
											<img src="~/media/services/@recommendation.Image" alt="" />
											<h2>@recommendation.Price.ToString("N0")</h2>
											<p>@recommendation.Name</p>
											<button type="button" class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-id="@recommendation.Id"><i class="fa fa-shopping-cart"></i>Add to cart</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
				<a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
					<i class="fa fa-angle-left"></i>
				</a>
				<a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
					<i class="fa fa-angle-right"></i>
				</a>
			</div>
		</div><!--/recommended_items-->

	</div>
</div>