@model IEnumerable<FoodModel>
<div class="col-sm-3">
	@Html.Partial("_SidebarPartial")
</div>

<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">MÓN ĂN</h2>
		@foreach (var item in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">
					<div class="single-products">
						<div class="productinfo text-center">
							<a asp-action="Detail" asp-controller="FoodModel" asp-route-Id="@item.Id">
								<img src="~/media/services/@item.Image" alt="@item.Name" width="100%" height="220" />
								<h2>@item.Price.ToString("N0") đ</h2>
								<p>@item.Name</p>
								<p>Loại món: @item.FoodCategory.CategoryName</p>
								<p>Trình tự: @item.FoodSequence.Name</p>
							</a>
							<a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-id="@item.Id"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
						</div>
					</div>
					<div class="choose">
						<ul class="nav nav-pills nav-justified">
							<li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
							<li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
						</ul>
					</div>
				</div>
			</div>
		}

	</div><!--features_items-->
</div>
