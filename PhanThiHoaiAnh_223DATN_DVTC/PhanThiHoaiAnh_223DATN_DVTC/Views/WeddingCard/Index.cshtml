@model IEnumerable<WeddingCardCategoryModel>
<div class="col-sm-3">
	@Html.Partial("_SidebarPartial")
</div>

<div class="col-sm-9 padding-right">
	<div class="features_items">
		<!--features_items-->
		<h2 class="title text-center">MẪU THIỆP CƯỚI</h2>
		@foreach (var item in Model)
		{
			<div class="col-sm-4">
				<div class="product-image-wrapper">
					<div class="single-products">

						<div class="productinfo text-center">
							<a asp-action="Details" asp-controller="WeddingCard" asp-route-Id="@item.Id">
								<img src="~/media/services/@item.Image" alt="@item.Name" width="100%" height="220" />
								<h2>@item.Price.ToString("N0") đ</h2>
								<p>@item.Name</p>
							</a>
							<a class="btn btn-default add-to-cart" asp-action="AddWishList" asp-controller="Cart" asp-route-id="@item.Id">
								<i class="fa fa-star"></i>
								Thêm vào yêu thích
							</a>
						</div>
					</div>
				</div>
			</div>
		}
	</div><!--features_items-->
</div>