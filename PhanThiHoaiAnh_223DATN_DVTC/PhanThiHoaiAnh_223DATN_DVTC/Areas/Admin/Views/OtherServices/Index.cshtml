@model IEnumerable<OtherServicesModel>
@{
    ViewData["title"] = "Danh sách các dịch vụ";
}
<h3>Danh sách Dịch vụ</h3>
<a asp-action="Create" asp-controller="OtherServices">Thêm dịch vụ</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên dịch vụ</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Đơn giá</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Đường dẫn</th>
            <th scope="col">Loại dịch vụ</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Thao tác</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
             <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td width="280">@Html.Raw(@item.Description)</td>
                <td>@item.Price.ToString("N0")</td>
                <td><img src="~/media/services/@item.Image" width="120" /></td>
                <td>@item.Slug</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="OtherServices" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="OtherServices" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>

        }
       
    </tbody>
</table>
