@model OtherServicesModel
@{
    ViewData["title"] = "Tạo mới dịch vụ";
}
<h4>Tạo Dịch vụ</h4>
<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label>Tên dịch vụ</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Đơn giá</label>
            <input asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Mô tả</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Loại dịch vụ</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.ServiceCategories">
                <option>--Chọn loại dịch vụ</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Hình ảnh</label>
            <input asp-for="ImageUpload" class="form-control" />
            <span asp-validation-for="ImageUpload" class="text-danger" />
            <img id="imgpreview" class="pt-2" />
        </div>

        <div class="form-group">
            <label>Trạng thái dịch vụ</label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Tạo dịch vụ</button>
        </div>

    </form>
<a asp-action="Index">Trở về</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        $("#ImageUpload").change(function () {
            readURL(this);
        })
    </script>
    <script>
        CKEDITOR.replace('Description');
    </script>

}

