@model IEnumerable<ServiceCategoryModel>
@{
    ViewData["title"] = "Loại dịch vụ";
}
<h3>Loại dịch vụ</h3>
<a asp-action="Create" asp-controller="ServiceCategory">Thêm loại dịch vụ</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Mã loại</th>
            <th scope="col">Tên loại dịch vụ</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Đường dẫn</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.CategoryName</td>
                <td width="250">@Html.Raw(@item.Description)</td>
                <td>@item.Slug</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="ServiceCategory" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="ServiceCategory" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>

        }

    </tbody>
</table>
