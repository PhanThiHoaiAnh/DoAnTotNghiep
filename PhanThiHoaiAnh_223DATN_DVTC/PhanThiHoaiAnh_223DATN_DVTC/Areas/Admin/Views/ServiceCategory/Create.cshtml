@model ServiceCategoryModel
@{
    ViewData["title"] = "Tạo mới loại dịch vụ";
}
<h4>Tạo loại dịch vụ</h4>
<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label>Mã loại dịch vụ</label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Tên loại dịch vụ</label>
            <input asp-for="CategoryName" class="form-control"/>
            <span asp-validation-for="CategoryName" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Mô tả</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Tạo</button>
        </div>

    </form>
<a asp-action="Index">Trở về</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

