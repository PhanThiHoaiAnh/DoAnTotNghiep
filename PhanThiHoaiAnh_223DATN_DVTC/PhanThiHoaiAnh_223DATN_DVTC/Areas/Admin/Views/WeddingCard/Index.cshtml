@model IEnumerable<WeddingCardCategoryModel>
@{
    ViewData["title"] = "Danh sách thiệp";
}
<h3>Danh sách thiệp</h3>
<a asp-action="Create" asp-controller="WeddingCard">Thêm thiệp cưới</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Mã thiệp </th>
            <th scope="col">Tên thiệp</th>
            <th scope="col">Giá</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Đường dẫn</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0")</td>
                <td><img src="~/media/services/@item.Image" width="120" /></td>
                <td width="300px">@Html.Raw(@item.Description)</td>
                <td>@item.Slug</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="WeddingCard" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="WeddingCard" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>

        }

    </tbody>
</table>
