<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">
	<title>@ViewData["title"]-Trang quản lý</title>
	<link href="~/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.1/css/font-awesome.css" rel="stylesheet">
	<link href="~/css/prettyPhoto.css" rel="stylesheet">
	<link href="~/css/price-range.css" rel="stylesheet">
	<link href="~/css/animate.css" rel="stylesheet">
	<link href="~/css/main.css" rel="stylesheet">
	<link href="~/css/responsive.css" rel="stylesheet">
	<!--[if lt IE 9]>
	<script src="js/html5shiv.js"></script>
	<script src="js/respond.min.js"></script>
	<![endif]-->
	<link rel="shortcut icon" href="images/ico/favicon.ico">
	<link rel="apple-touch-icon-precomposed" sizes="144x144" href="images/ico/apple-touch-icon-144-precomposed.png">
	<link rel="apple-touch-icon-precomposed" sizes="114x114" href="images/ico/apple-touch-icon-114-precomposed.png">
	<link rel="apple-touch-icon-precomposed" sizes="72x72" href="images/ico/apple-touch-icon-72-precomposed.png">
	<link rel="apple-touch-icon-precomposed" href="images/ico/apple-touch-icon-57-precomposed.png">
</head><!--/head-->

<body>
	<header id="header">
		<!--header-->

		<div class="header-bottom">
			<!--header-bottom-->
			<div class="container">
				<div class="row">
					<div class="col-sm-9">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
						</div>
						<div class="mainmenu pull-left">
							<ul class="nav navbar-nav collapse navbar-collapse">
								<li><a href="http://localhost:37963/" class="active">Về trang chính</a></li>
								<li class="dropdown">
									<a href="#">Dịch vụ<i class="fa fa-angle-down"></i></a>
									<ul role="menu" class="sub-menu">
										<li><a asp-controller="OtherServices">Các dịch vụ</a></li>
										<li><a asp-controller="ServiceCategory">Loại dịch vụ</a></li>
									</ul>
								</li>
								<li class="dropdown">
									<a href="#">Thực đơn<i class="fa fa-angle-down"></i></a>
									<ul role="menu" class="sub-menu">
										<li><a asp-controller="Menu">Danh sách thực đơn</a></li>
										<li><a asp-controller="MenuDetail">Chi tiết thực đơn</a></li>
										<li><a asp-controller="Food">Món ăn</a></li>
										<li><a asp-controller="FoodSequence">Trình tự món</a></li>
										<li><a asp-controller="FoodCategory">Loại món</a></li>
									</ul>
								</li>
								<li class="dropdown">
									<a href="#">Quản lý tiệc<i class="fa fa-angle-down"></i></a>
									<ul role="menu" class="sub-menu">
										<li><a asp-controller="PartyCategory">Các loại tiệc</a></li>
										<li><a asp-controller="TableCategory">Loại bàn tiệc</a></li>
										<li><a asp-controller="Location">Loại địa điểm tiệc</a></li>
									</ul>
								</li>
								<li class="dropdown">
									<a href="#">Đơn hàng<i class="fa fa-angle-down"></i></a>
									<ul role="menu" class="sub-menu">
										<li><a asp-controller="Order" asp-action="Index">Đơn đặt dịch vụ</a></li>
										<li><a asp-controller="Party" asp-action="Index">Đơn đặt tiệc</a></li>
										<li><a asp-controller="OrderParty" asp-action="Index">Hóa đơn đặt tiệc</a></li>
									</ul>
								</li>
								<li class="dropdown">
									<a href="#">Quản lý người dùng<i class="fa fa-angle-down"></i></a>
									<ul role="menu" class="sub-menu">
										<li><a asp-controller="Account" asp-action="Index">Danh sách người dùng</a></li>
										<li><a asp-controller="Account" asp-action="EmployeeIndex">Danh sách Nhân viên</a></li>
										<li><a asp-controller="Position" asp-action="Index">Danh sách chức vụ</a></li>
										<li><a asp-controller="Account" asp-action="Index">Phân công việc</a></li>
										<li><a asp-controller="AppRole" asp-action="Index">Danh sách Quyền</a></li>
									</ul>
								</li>
								
								
							</ul>
						</div>
					</div>
					<div class="col-sm-3">
						
						<div class="search_box pull-right">
							<input type="text" placeholder="Search" />
						</div>
					</div>
				</div>
			</div>
		</div><!--/header-bottom-->
	</header><!--/header-->
	<section>
		<div class="container">
			<div class="row">
				@Html.Partial("_NotificationPartial")
				@RenderBody()
			</div>
		</div>
	</section>

	<footer id="footer">
		<!--Footer-->

	</footer><!--/Footer-->



	<script src="~/js/jquery.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	<script src="~/js/jquery.scrollUp.min.js"></script>
	<script src="~/js/price-range.js"></script>
	<script src="~/js/jquery.prettyPhoto.js"></script>
	<script src="~/js/main.js"></script>
	<script src="~/backend/js/site.js"></script>
	@await RenderSectionAsync("Scripts", required:false)
</body>
</html>