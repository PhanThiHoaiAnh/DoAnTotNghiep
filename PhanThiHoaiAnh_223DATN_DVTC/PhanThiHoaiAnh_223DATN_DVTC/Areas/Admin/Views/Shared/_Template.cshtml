        /* CSS cho giao diện */
        body {
            font-family: Arial, sans-serif;
            display: grid;
            grid-template-columns: 200px 1fr;
            grid-gap: 20px;
            padding: 20px;
        }

        .sidebar {
            background-color: #333;
            color: #fff;
            padding: 20px;
        }

        .menu-item {
            margin-bottom: 10px;
            background-color: #555;
            padding: 10px;
            border-radius: 5px;
        }

            .menu-item a {
                color: #fff;
                text-decoration: none;
            }

        .dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Thay đổi thành auto-fit và chỉnh kích thước widget */
            grid-gap: 20px;
        }

        .widget {
            background-color: cornsilk;
            border-radius: 5px;
            padding: 20px;
        }

            .widget h2 {
                color: #333;
                font-size: 18px;
                margin-top: 0;
            }

            .widget p {
                color: #666;
                font-size: 14px;
            }

            .widget .value {
                font-size: 24px;
                font-weight: bold;
            }
    </style>
