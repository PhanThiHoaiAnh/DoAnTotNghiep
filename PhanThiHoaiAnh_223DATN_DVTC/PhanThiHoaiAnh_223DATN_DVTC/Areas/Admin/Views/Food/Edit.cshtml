@model FoodModel
@{
    ViewData["title"] = "Chỉnh sửa món ăn";
}
<h4>Chỉnh sửa món ăn</h4>
<div class="col-md-9">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label>Tên món ăn</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Mô tả</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Đơn giá</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Hình ảnh</label>
            <input asp-for="ImageUpload" class="form-control" />
            <span asp-validation-for="ImageUpload" class="text-danger" />
            <img id="imgpreview" class="pt-2" />
        </div>

        <div class="form-group">
            <label>Loại món</label>
            <select asp-for="FoodCategoryId" class="form-control" asp-items="ViewBag.FoodCategories">
                <option>--Chọn loại món</option>
            </select>
            <span asp-validation-for="FoodCategoryId" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Trật tự món</label>
            <select asp-for="FoodSequenceId" class="form-control" asp-items="ViewBag.FoodSequence">
                <option>--Chọn trật tự món</option>
            </select>
            <span asp-validation-for="FoodSequenceId" class="text-danger" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Cập nhật</button>
        </div>

    </form>
    <a asp-action="Index">Trở về</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Description');
    </script>

}

