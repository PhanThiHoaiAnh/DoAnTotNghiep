@model IEnumerable<FoodModel>
@{
    ViewData["title"] = "Danh sách món ăn";
}
<h3>Danh sách món ăn</h3>
<a asp-action="Create" asp-controller="Food">Thêm </a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Mã món </th>
            <th scope="col">Tên món</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Đơn giá</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Đường dẫn</th>
            <th scope="col">Loại món</th>
            <th scope="col">Trật tự món</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td width="220">@Html.Raw(@item.Description)</td>
                <td>@item.Price.ToString("N0")</td>
                <td><img src="~/media/food/@item.Image" width="120" /></td>
                <td>@item.Slug</td>
                <td>@item.FoodCategory.CategoryName</td>
                <td>@item.FoodSequence.Name</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Food" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Food" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>

        }

    </tbody>
</table>
