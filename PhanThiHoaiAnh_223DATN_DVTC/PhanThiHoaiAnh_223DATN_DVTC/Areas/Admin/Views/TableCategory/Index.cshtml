@model IEnumerable<TableCategoryModel>
@{
    ViewData["title"] = "Các loại bàn tiệc";
}
<h3>Các loại bàn tiệc</h3>
<a asp-action="Create" asp-controller="TableCategory">Thêm mới </a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Mã </th>
            <th scope="col">Tên loài bàn tiệc</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Số lượng người/bàn</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td >@item.Name</td>
                <td >@item.Description</td>
                <td >@item.Quantity</td>
                <td width="110">
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="TableCategory" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="TableCategory" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>

        }

    </tbody>
</table>
