@model IEnumerable<DatTiecModel>
@{
    ViewData["title"] = "Danh sách đặt tiệc";
}
<h3>Danh sách Dịch vụ</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tài khoản</th>
            <th scope="col">Ngày tổ chức</th>
            <th scope="col">Ngày đặt </th>
            <th scope="col">Số bàn tiệc</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Thực đơn</th>
            <th scope="col">Tổng tiền</th>
            <th scope="col">Tiền cọc</th>
            <th scope="col">Tiền còn lại</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Hình thức TT</th>
            <th scope="col">Thao tác</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.UserName</td>
                <td>@item.OrderOrg</td>
                <td>@item.OrderDate</td>
                <td>@item.TableCount</td>
                <td>@item.Address</td>
                <td>@item.ServiceName</td>
                <td>@item.Total.ToString("##,###")</td>
                <td>@item.Deposit.ToString("##,###")</td>
                <td>@item.Pay.ToString("##,###")</td>
                <td>
                    @if (@item.Status == true)
                    {
                        <span class="text text-success">Đã đặt cọc</span>
                    }
                    else
                    {
                        <span class="text text-success">Chưa đặt cọc</span>
                    }
                </td>
                <td>@item.Payment</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="OrderParty" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="OrderParty" asp-route-Id="@item.Id">Xóa</a>
                    <a asp-action="Detail" class="btn btn-success btn-sm " asp-controller="OrderParty" asp-route-Id="@item.Id">Hóa đơn</a>
                </td>
            </tr>

        }

    </tbody>
</table>
