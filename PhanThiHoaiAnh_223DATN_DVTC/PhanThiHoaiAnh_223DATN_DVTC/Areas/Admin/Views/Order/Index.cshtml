@model IEnumerable<OrderModel>
@{
    ViewData["Titile"] = "Đơn hàng";
}
<h3>Danh sách đơn hàng</h3>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th scope="col">Mã đơn</th>
            <th scope="col">Tài khoản đặt dịch vụ</th>
            <th scope="col">Ngày đặt</th>
            <th scope="col">Ngày giao</th>
            <th scope="col">Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>#</td>
                <td scope="row">@item.OrderCode</td>
                <td>@item.UserName</td>
                <td>@item.OrderDate</td>
                <td>@item.ReceivedDate</td>

                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                    }
                    else
                    {
                        <span class="text text-success">Đơn hàng đã hoàn thành</span>
                    }
                </td>
                <td>
                    <a asp-action="ViewOrder" class="btn btn-warning btn-sm" asp-controller="Order" asp-route-Id="@item.OrderCode">Xem</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Order" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }

    </tbody>
</table>
