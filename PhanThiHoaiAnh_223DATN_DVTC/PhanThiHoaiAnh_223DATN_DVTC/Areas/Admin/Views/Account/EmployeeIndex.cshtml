@model IEnumerable<EmployeeModel>
@{
    ViewData["title"] = "Danh sách Nhân viên";
}
<h3>Danh sách Nhân viên</h3>
<a asp-action="Create" asp-controller="Account">Thêm nhân viên</a>
<table id="myTable" class="table">
    <thead>
        <tr>
            <th scope="col">Họ</th>
            <th scope="col">Tên</th>
            <th scope="col">Email</th>
            <th scope="col">Giới tính</th>
            <th scope="col">Ngày sinh</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">@item.LastName</td>
                <td scope="row">@item.FirstName</td>
                <td>@item.Email</td>
                <td>@item.Gender</td>
                <td>@item.Birthday</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Address</td>
                <td>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Account" asp-route-Id="@item.Id">Xóa</a>
                    <a asp-action="Edit" class="btn btn-warning btn-sm confirmDeletion" asp-controller="Account" asp-route-Id="@item.Id">Sửa</a>
                </td>
            </tr>
        }

    </tbody>
</table>