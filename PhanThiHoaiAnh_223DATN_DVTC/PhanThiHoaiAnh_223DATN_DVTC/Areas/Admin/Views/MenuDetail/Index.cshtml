@model IEnumerable<MenuDetail>
@{
    ViewData["title"] = "Chi tiết thực đơn";
}

<h3>Chi tiết thực đơn</h3> 
<a asp-action="Create" asp-controller="MenuDetail">Thêm </a>
<table class="table">
    <thead> 
        <tr> 
            <th scope="col"># </th>
            <th scope="col">Tên thực đơn</th> 
            <th scope="col">Tên món</th> 
            <th scope="col">Mô tả</th> 
            <th scope="col">Thao tác</th> 
        </tr> 
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr> 
                <th scope="row">@item.Id</th>
                <td>@item.Menu.Name</td>
                <td>@item.Food.Name</td> 
                <td>@item.Description</td> 
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="MenuDetail" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="MenuDetail" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>