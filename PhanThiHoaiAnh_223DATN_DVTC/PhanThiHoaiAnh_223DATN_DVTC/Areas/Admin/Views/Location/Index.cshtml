@model IEnumerable<LocationModel>
@{
    ViewData["title"] = "Các trật tự";
}
<h3>Trật tự món</h3>
<a asp-action="Create" asp-controller="Location">Thêm địa điểm </a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Mã </th>
            <th scope="col">Tên địa điểm</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Đường dẫn</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td >@item.Name</td>
                <td >@item.Description</td>
                <td >@item.Slug</td>
                <td width="110">
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Location" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Location" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>

        }

    </tbody>
</table>
