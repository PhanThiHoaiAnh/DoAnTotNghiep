@model IEnumerable<FoodCategoryModel>
@{
    ViewData["title"] = "Các loại món";
}
<h3>Loại món</h3>
<a asp-action="Create" asp-controller="FoodCategory">Thêm loại món</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Mã loại </th>
            <th scope="col">Tên loại</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Đường dẫn</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>@item.Slug</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="FoodCategory" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="FoodCategory" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>

        }

    </tbody>
</table>
