@model IEnumerable<PartyModel>
@{
    ViewData["title"] = "Danh sách đặt tiệc";
}
<h3>Danh sách Dịch vụ</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ngày tổ chức</th>
            <th scope="col">Ngày đặt </th>
            <th scope="col">Số lượng khách</th>
            <th scope="col">Số bàn tiệc</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Mã thực đơn</th>
            <th scope="col">Ghi chú</th>
            <th scope="col">Thao tác</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.OrgDate</td>
                <td>@item.OrderDate</td>
                <td>@item.CusNumber</td>
                <td>@item.PersonTable</td>
                <td>@item.LocationName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.MenuParty</td>
                <td width="150">@Html.Raw(@item.Note)</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="OtherServices" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="OtherServices" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>

        }

    </tbody>
</table>
