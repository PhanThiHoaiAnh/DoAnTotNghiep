@model IEnumerable<PartyModel>
@{
    ViewData["title"] = "Danh sách đặt tiệc";
}
<h3>Danh sách Đặt tiệc</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ngày tổ chức</th>
            <th scope="col">Ngày đặt </th>
            <th scope="col">Số lượng khách</th>
            <th scope="col">Số bàn tiệc</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Mã thực đơn</th>
            <th scope="col">Ghi chú</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Thao tác</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.OrgDate</td>
                <td>@item.OrderDate</td>
                <td>@item.CusNumber</td>
                <td>@item.PersonTable</td>
                <td>@item.LocationName</td>
                <td>@item.PhoneNumber</td>
                <td>@(item.MenuParty != null ? item.ThucDon.Name:"")</td>
                <td width="150">@Html.Raw(@item.Note)</td>
                <td>
                    @if (@item.Status == false)
                    {
                        <span class="text text-success">Chưa duyệt</span>
                    }
                    else
                    {
                        <span class="text text-success">Đã duyệt</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Party" asp-route-Id="@item.Id">Sửa</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Party" asp-route-Id="@item.Id">Xoá</a>
                    <a asp-action="Inspect" class="btn btn-success btn-sm " asp-controller="Party" asp-route-Id="@item.Id">Duyệt</a>
                </td>
            </tr>

        }

    </tbody>
</table>
