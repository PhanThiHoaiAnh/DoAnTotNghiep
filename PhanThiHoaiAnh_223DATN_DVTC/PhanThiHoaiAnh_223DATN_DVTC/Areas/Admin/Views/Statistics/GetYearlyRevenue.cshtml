@model List<YearlyRevenueModel>
@{
    ViewData["title"] = "Thống kê";
}
<div style="margin-bottom:15px; text-align:center">
    <h3>Biểu đồ Doanh thu năm</h3>
</div>
<div class="chart-container">
    <canvas id="yearlyRevenueChart"></canvas>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var revenueData = @Html.Raw(Json.Serialize(Model));

        var years = revenueData.map(function (data) {
            return data.Year;
        });

        var revenues = revenueData.map(function (data) {
            return data.Revenue;
        });

        var ctx = document.getElementById('yearlyRevenueChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: years,
                datasets: [{
                    label: 'Doanh thu năm',
                    data: revenues,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',// Màu nền của các cột
                    borderColor: 'rgba(75, 192, 192, 1)',// Màu viền của các cột
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0 // Số lượng chữ số thập phân hiển thị trên trục y
                        }
                    },
                    x: {
                        afterBuildTicks: function (scale) {
                            scale.ticks.push('năm');
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false // Ẩn hiển thị chú thích
                    }
                }
            }
        });
    </script>
}
