@model List<MonthlyRevenueModel>
@{
    ViewData["title"] = "Thống kê";
}
<div style="margin-bottom:15px; text-align:center">
    <h3>Biểu đồ Doanh thu hàng tháng</h3>
</div>
<div class="chart-container">
    <canvas id="monthlRevenueChart" ></canvas>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var revenueData = @Html.Raw(Json.Serialize(Model));

        var months = [];
        var revenues = [];

        for (var i = 1; i <= 12; i++) {
            var monthData = revenueData.find(function (data) {
                return data.month === i;
            });

            months.push(i);
            revenues.push(monthData ? monthData.revenue : 0);
        }

        var ctx = document.getElementById('monthlRevenueChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: months,
                datasets: [{
                    label: 'Doanh thu tháng',
                    data: revenues,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',// Màu nền của các cột
                    borderColor: 'rgba(75, 192, 192, 1)',// Màu viền của các cột
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            precision: 0 // Số lượng chữ số thập phân hiển thị trên trục y
                        }
                       
                    }
                },
                plugins: {
                    legend: {
                        display: false // Ẩn hiển thị chú thích
                    }
                }
            }
        });
    </script>
    <script>
        var revenueData = @Html.Raw(Json.Serialize(Model));

        var months = revenueData.map(function (data) {
            return data.month;
        });

        var revenues = revenueData.map(function (data) {
